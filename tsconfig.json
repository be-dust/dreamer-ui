{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "module": "esnext",
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitThis": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*.ts", "src/**/*.vue"],
  "exclude": ["node_modules"],
  "typeRoots": ["node_modules/@types", "src/**/*.d.ts", "*.d.ts"]
}
